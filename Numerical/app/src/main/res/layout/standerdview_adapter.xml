<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_20sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:id="@+id/placeofimage_tv"
            android:visibility="gone"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/colorwhite"/>
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:textSize="@dimen/text_size_14"
            android:fontFamily="@font/titilium"
            android:autoSizeTextType="uniform"
            android:textColor="@color/colorAccent"
            android:maxLines="1"
            android:layout_marginRight="@dimen/_2sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_img"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">
            <TextView
                android:id="@+id/likecount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/custome_ic_like"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="120"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/titilium"/>
            <TextView
                android:id="@+id/view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_view"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="120"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/titilium"/>

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_comment"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="120"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/titilium"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Tags"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_18"
            android:id="@+id/numeral_tv"
            android:fontFamily="@font/titinium_semibold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Tags"
            android:fontFamily="@font/titilium"
            android:textSize="@dimen/text_size_18"
            android:id="@+id/numeral_detail_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Tags"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_18" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tags_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source  "
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/source_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textColor="@color/weblink"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>